---
import LayoutSite from '@layouts/LayoutSite.astro'
import { isLoggedIn } from '@lib/auth'
const loggedIn = await isLoggedIn(Astro.request)
---

<LayoutSite title='SECRETPLAN'>
  <div class='mx-auto mt-10 text-white gap-y-8 sm:mt-10 sm:mx-0'>
    <div
      class='max-w-md p-8 mx-auto text-center bg-black border-4 rounded-3xl ring-1 ring-gray-200 xl:p-10 sm:mt-8'>
      <p>Page not found</p>
      {
        loggedIn ? (
          <a href='/app/dashboard' class='underline'>
            Go to the dashboard
          </a>
        ) : (
          <a href='/' class='underline'>
            Go to the homepage
          </a>
        )
      }
    </div>
  </div>
</LayoutSite>
